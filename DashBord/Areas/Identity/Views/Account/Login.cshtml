@model DashBourd.ViewModel.LoginVM

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<h1 class="text-center  text-white mt-4">Welcome Back!</h1>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="wave-group mb-4">
                            <input asp-for="UsernameOrEmail" class="input" required />
                            <span class="bar"></span>
                            <label class="label">
                                <span class="label-char" style="--index: 0">U</span>
                                <span class="label-char" style="--index: 1">s</span>
                                <span class="label-char" style="--index: 2">e</span>
                                <span class="label-char" style="--index: 3">r</span>
                                <span class="label-char" style="--index: 4">n</span>
                                <span class="label-char" style="--index: 5">a</span>
                                <span class="label-char" style="--index: 6">m</span>
                                <span class="label-char" style="--index: 7">e</span>
                                <span class="label-char" style="--index: 8">/</span>
                                <span class="label-char" style="--index: 9">E</span>
                                <span class="label-char" style="--index: 10">m</span>
                                <span class="label-char" style="--index: 11">a</span>
                                <span class="label-char" style="--index: 12">i</span>
                                <span class="label-char" style="--index: 13">l</span>
                            </label>
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="wave-group mb-4">
                            <input asp-for="Password" class="input" required />
                            <span class="bar"></span>
                            <label class="label">
                                <span class="label-char" style="--index: 0">P</span>
                                <span class="label-char" style="--index: 1">a</span>
                                <span class="label-char" style="--index: 2">s</span>
                                <span class="label-char" style="--index: 3">s</span>
                                <span class="label-char" style="--index: 4">w</span>
                                <span class="label-char" style="--index: 5">o</span>
                                <span class="label-char" style="--index: 6">r</span>
                                <span class="label-char" style="--index: 7">d</span>
                            </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <label class="custom-checkbox">
                            <input asp-for="RememberMe" type="checkbox" class="custom-check" />
                            <span class="checkbox"></span>
                            <span class="checkbox-label">@Html.DisplayNameFor(m => m.RememberMe)</span>
                        </label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary mt-3" asp-action="Register">Register</a>
                            <input type="submit" value="Login" class="btn btn-primary mt-3" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Account" asp-action="ResendConfiremEmail" class="d-block">Resend Confirm Email</a>
                    <a asp-controller="Account" asp-action="ForgetPassword" class="d-block mt-2">Forget the Password</a>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}