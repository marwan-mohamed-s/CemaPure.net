@model DashBourd.ViewModel.ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<!-- Google Fonts: Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/ChangePassword.css" rel="stylesheet" asp-append-version="true">
<body>

    <div class="extra-circle"></div>

    <div class="card">
        <!-- Close Button -->

        <div class="info">
            <h2 class="title">
                Change Password
            </h2>
            <p class="description">
                Enter your new password and confirm it to securely update your account
            </p>
        </div>

        <!-- Success / Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <strong>Success!</strong> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong> @TempData["Error"]
            </div>
        }

        <form asp-action="ChangePassword" method="post" class="form">
            <input type="hidden" asp-for="ApplicationUserId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- New Password -->
            <div class="input-group">
                <label class="label">New Password</label>
                <div class="input-wrapper">
                    <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                    <i class="toggle-password fas fa-eye-slash" onclick="togglePassword(this, 'NewPassword')"></i>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="input-group">
                <label class="label">Confirm Password</label>
                <div class="input-wrapper">
                    <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm new password" />
                    <i class="toggle-password fas fa-eye-slash" onclick="togglePassword(this, 'ConfirmNewPassword')"></i>
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="action-btns">
                <button type="submit" class="verify btn-submit">
                    <span class="btn-text">Update Password</span>
                    <span class="spinner d-none"></span>
                </button>
                <a asp-action="Login" class="clear">
                    Back to Login
                </a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script>
            // Toggle Password Visibility
            function togglePassword(icon, inputId) {
                const input = document.getElementById(inputId);
                if (!input) return;

                if (input.type === "password") {
                    input.type = "text";
                    icon.classList.replace("fa-eye-slash", "fa-eye");
                } else {
                    input.type = "password";
                    icon.classList.replace("fa-eye", "fa-eye-slash");
                }
            }

            // Loading State on Submit
            document.querySelector('.btn-submit')?.addEventListener('click', function () {
                if (this.classList.contains('loading')) return;
                this.classList.add('loading');
                this.querySelector('.btn-text').textContent = 'Updating...';
                this.querySelector('.spinner').classList.remove('d-none');
            });

            // Add IDs to inputs
            document.addEventListener('DOMContentLoaded', () => {
                const newPass = document.querySelector('[asp-for="NewPassword"]');
                const confirmPass = document.querySelector('[asp-for="ConfirmNewPassword"]');
                if (newPass) newPass.id = 'NewPassword';
                if (confirmPass) confirmPass.id = 'ConfirmNewPassword';
            });
        </script>
    }
</body>
</html>