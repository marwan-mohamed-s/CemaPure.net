@model DashBourd.ViewModel.ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
}

<link rel="stylesheet" href="~/css/ForgetPassword.css" asp-append-version="true" />
<div class="extra-circle"></div>

<div class="card">
    <h2 class="title">Forget Password</h2>

    <form asp-action="ForgetPassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserNameOrEmail" class="control-label"></label>
            <input asp-for="UserNameOrEmail" class="form-control"  />
            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
        </div>

        <div class="form-group mt-4 text-center">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Login" class="back-link">Back to login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
