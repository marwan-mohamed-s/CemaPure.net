@model DashBourd.ViewModel.ResendEmailConfiremVM

@{
    ViewData["Title"] = "ResendConfiremEmail";
}

<link rel="stylesheet" href="~/css/ResendConfirmEmail.css" asp-append-version="true" />
<div class="extra-circle"></div>
<div class="card">
    <form asp-action="ResendConfiremEmail">
        <p class="title">Resend Confirmation Email</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="UserNameOrEmail" class="control-label"></label>
            <input asp-for="UserNameOrEmail" class="form-control" />
            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
    <div class="mt-3">
        <a asp-action="Login">Back to Login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
