@model DashBourd.ViewModel.ResendEmailConfiremVM
@{
	ViewData["Title"] = "Resend Confirmation Email";
}

<link rel="stylesheet" href="~/css/ResendConfirmEmail.css" asp-append-version="true" />

<div class="extra-circle"></div>
<div class="extra-circle2"></div>

<div class="card">
	<form asp-action="ResendConfiremEmail" method="post">
		<p class="title">Resend Confirmation Email</p>

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label asp-for="UserNameOrEmail"></label>
			<input asp-for="UserNameOrEmail" class="form-control" placeholder="Enter email or username" />
			<div class="bar"></div>
			<span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
		</div>

		<button type="submit" class="btn-primary">
			Send Confirmation Link
		</button>
<div class="mt-3">
	<a asp-action="Login">Back to Login</a>
</div>

</form>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}